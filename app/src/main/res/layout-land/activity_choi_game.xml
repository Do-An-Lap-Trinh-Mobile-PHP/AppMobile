<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_color"
    tools:context=".ChoiGame">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView7"
        app:layout_constraintStart_toEndOf="@+id/imageView7"
        app:layout_constraintTop_toTopOf="@+id/imageView7"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView9"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView8"
        app:layout_constraintStart_toEndOf="@+id/imageView8"
        app:layout_constraintTop_toTopOf="@+id/imageView8"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView7"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="4dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txt_Name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/avatar"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/txt_Credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:text="1000"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgV_credit"
        app:layout_constraintTop_toBottomOf="@+id/imageView6" />

    <TextView
        android:id="@+id/txt_Cauhoi"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginEnd="50dp"
        android:text="Con gì có 8 chân?"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="30sp"
        app:layout_constraintBaseline_toBaselineOf="@+id/txt_Cau"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.158"
        app:layout_constraintStart_toEndOf="@+id/txt_Cau" />

    <ImageView
        android:id="@+id/imgV_credit"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/round_button"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView6"
        app:srcCompat="@drawable/credit"
        tools:srcCompat="@drawable/credit" />

    <TextView
        android:id="@+id/txt_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Tung_17"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imageView6"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Cau"
        android:layout_width="87dp"
        android:layout_height="39dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="30dp"
        android:text="Câu 1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imv_shopItems"
        app:layout_constraintTop_toBottomOf="@+id/txt_Credit" />

    <ImageButton
        android:id="@+id/ibtn_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/itemcall"
        android:onClick="tro_giup_call"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_khangia"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_khangia"
        app:layout_constraintTop_toTopOf="@+id/ibtn_khangia"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_khangia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="60dp"
        android:background="@drawable/itemkhangia"
        android:onClick="tro_giup_khan_gia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_30s"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/item30s"
        android:onClick="tro_giup_them_30s"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_5050"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_5050"
        app:layout_constraintTop_toTopOf="@+id/ibtn_5050"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_5050"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="10dp"
        android:background="@drawable/item5050"
        android:onClick="tro_giup_5050"
        app:layout_constraintBottom_toBottomOf="@+id/ibtn_call"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_call"
        app:layout_constraintTop_toTopOf="@+id/ibtn_call"
        app:srcCompat="@drawable/round_button" />

    <ImageView
        android:id="@+id/imv_shopItems"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="16dp"
        android:onClick="Shop_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Credit"
        app:srcCompat="@drawable/shopcredit" />

    <TextView
        android:id="@+id/txt_Time"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:text="30"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pgB_time"
        app:layout_constraintEnd_toEndOf="@+id/pgB_time"
        app:layout_constraintHorizontal_bias="0.428"
        app:layout_constraintStart_toStartOf="@+id/pgB_time"
        app:layout_constraintTop_toTopOf="@+id/pgB_time"
        app:layout_constraintVertical_bias="0.431" />

    <Button
        android:id="@+id/btn_CauA"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.116"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Cauhoi" />

    <ProgressBar
        android:id="@+id/pgB_time"
        style="?android:attr/progressBarStyle"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginTop="100dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.911"
        app:layout_constraintStart_toEndOf="@+id/txt_Cau"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_CauC"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="20dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_CauA"
        app:layout_constraintStart_toEndOf="@+id/btn_CauA" />

    <Button
        android:id="@+id/btn_CauD"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btn_CauC"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_CauC"
        app:layout_constraintTop_toBottomOf="@+id/btn_CauC" />

    <Button
        android:id="@+id/btn_CauB"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="32dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        app:layout_constraintEnd_toEndOf="@+id/btn_CauA"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/btn_CauA"
        app:layout_constraintTop_toBottomOf="@+id/btn_CauA" />

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView9"
        app:layout_constraintStart_toEndOf="@+id/imageView9"
        app:layout_constraintTop_toTopOf="@+id/imageView9"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imageView10"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:layout_constraintBottom_toBottomOf="@+id/imageView5"
        app:layout_constraintStart_toEndOf="@+id/imageView5"
        app:layout_constraintTop_toTopOf="@+id/imageView5"
        app:srcCompat="@drawable/heart" />

</androidx.constraintlayout.widget.ConstraintLayout>