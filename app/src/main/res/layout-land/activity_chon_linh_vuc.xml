<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_color"
    tools:context=".ChonLinhVuc">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="669dp"
        android:layout_height="183dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />


    <Button
        android:id="@+id/btn_Linhvuc1"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="175dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:onClick="Choi_game"
        android:text="Địa lý"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_Linhvuc2"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/radius_button"
        android:onClick="Choi_game"
        android:text="Văn học"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Linhvuc1"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <Button
        android:id="@+id/btn_Linhvuc3"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:onClick="Choi_game"
        android:text="Nghê thuật"
        app:layout_constraintEnd_toStartOf="@+id/guideline4"
        app:layout_constraintTop_toBottomOf="@+id/btn_Linhvuc1" />

    <Button
        android:id="@+id/btn_Linhvuc4"
        android:layout_width="240dp"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:background="@drawable/radius_button"
        android:text="Lịch sử"
        app:layout_constraintBaseline_toBaselineOf="@+id/btn_Linhvuc3"
        app:layout_constraintStart_toStartOf="@+id/guideline4" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="731dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintGuide_begin="163dp"
        app:layout_constraintGuide_percent="0.4"
        app:layout_constraintStart_toStartOf="parent" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="411dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintGuide_begin="365dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintWidth_percent="0.5" />
</androidx.constraintlayout.widget.ConstraintLayout>