<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_color"
    tools:context=".ChoiGame">

    <ImageView
        android:id="@+id/imgv_mang3"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imgv_mang2"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imgv_mang4"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imgv_mang3"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imgv_mang2"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imgv_mang1"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <ImageView
        android:id="@+id/imgv_mang5"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/imgv_mang4"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/heart" />

    <TextView
        android:id="@+id/txt_Credit"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="75dp"
        android:text="1000"
        android:textAlignment="textStart"
        android:textSize="24sp"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgV_credit"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_PhuongAnA"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:text="A. Ruồi"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Cauhoi" />

    <Button
        android:id="@+id/btn_PhuongAnC"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:text="C. Gián"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_PhuongAnB" />

    <Button
        android:id="@+id/btn_PhuongAnB"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:text="B. Nhện"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_PhuongAnA" />

    <Button
        android:id="@+id/btn_PhuongAnD"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/radius_button"
        android:text="D. Bọ hung"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/btn_PhuongAnC" />

    <ImageView
        android:id="@+id/imgV_avatar"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="15dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:srcCompat="@drawable/avatar" />

    <TextView
        android:id="@+id/txt_Cauhoi"
        android:layout_width="333dp"
        android:layout_height="60dp"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="50dp"
        android:text="Con gì có 8 chân?"
        android:textAlignment="center"
        android:textColor="@color/design_default_color_primary_dark"
        android:textSize="30sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/txt_Cau"
        app:layout_constraintVertical_bias="1.0" />

    <ImageView
        android:id="@+id/imgV_credit"
        android:layout_width="20dp"
        android:layout_height="30dp"
        android:layout_marginStart="10dp"
        android:layout_marginTop="10dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgV_avatar"
        tools:srcCompat="@drawable/credit" />

    <TextView
        android:id="@+id/txtV_Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="5dp"
        android:layout_marginTop="15dp"
        android:text="Tung_17"
        android:textStyle="bold"
        app:layout_constraintStart_toEndOf="@+id/imgV_avatar"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Cau"
        android:layout_width="110dp"
        android:layout_height="55dp"
        android:layout_marginTop="216dp"
        android:text="Câu 1"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.129"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <ImageButton
        android:id="@+id/ibtn_call"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/itemcall"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_khangia"
        android:onClick="tro_giup_call"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_khangia"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="32dp"
        android:background="@drawable/itemkhangia"
        android:onClick="tro_giup_khan_gia"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_30s"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/item30s"
        android:onClick="tro_giup_them_30s"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_5050"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <ImageButton
        android:id="@+id/ibtn_5050"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginTop="110dp"
        android:layout_marginEnd="20dp"
        android:background="@drawable/item5050"
        android:onClick="tro_giup_5050"
        app:layout_constraintEnd_toStartOf="@+id/ibtn_call"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/round_button" />

    <ImageView
        android:id="@+id/imv_shopItems"
        android:layout_width="61dp"
        android:layout_height="61dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="70dp"
        android:onClick="Shop_items"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imgV_avatar"
        app:srcCompat="@drawable/shopcredit" />

    <ImageView
        android:id="@+id/imgv_mang1"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="20dp"
        app:layout_constraintStart_toEndOf="@+id/txtV_Name"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/die_heart" />

    <ProgressBar
        android:id="@+id/pgB_time"
        style="?android:attr/progressBarStyle"
        android:layout_width="86dp"
        android:layout_height="82dp"
        android:layout_marginTop="180dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/txt_Cau"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/txt_Time"
        android:layout_width="51dp"
        android:layout_height="38dp"
        android:text="30"
        android:textAlignment="center"
        android:textSize="30sp"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/pgB_time"
        app:layout_constraintEnd_toEndOf="@+id/pgB_time"
        app:layout_constraintStart_toStartOf="@+id/pgB_time"
        app:layout_constraintTop_toTopOf="@+id/pgB_time" />

</androidx.constraintlayout.widget.ConstraintLayout>