<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/backgrond_color"
    tools:context=".ChonLinhVuc">


    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="435dp"
        android:layout_height="250dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo" />

    <Button
        android:id="@+id/btn_Linhvuc1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="50dp"
        android:layout_marginEnd="50dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        android:onClick="Linhvuc1_click"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2" />

    <Button
        android:id="@+id/btn_Linhvuc2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        android:onClick="Linhvuc2_click"
        app:layout_constraintEnd_toEndOf="@+id/btn_Linhvuc1"
        app:layout_constraintStart_toStartOf="@+id/btn_Linhvuc1"
        app:layout_constraintTop_toBottomOf="@+id/btn_Linhvuc1" />

    <Button
        android:id="@+id/btn_Linhvuc3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        android:onClick="Linhvuc3_click"
        app:layout_constraintEnd_toEndOf="@+id/btn_Linhvuc2"
        app:layout_constraintStart_toStartOf="@+id/btn_Linhvuc2"
        app:layout_constraintTop_toBottomOf="@+id/btn_Linhvuc2" />

    <Button
        android:id="@+id/btn_Linhvuc4"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:background="@drawable/radius_button"
        android:text="Button"
        android:onClick="Linhvuc4_click"
        app:layout_constraintEnd_toEndOf="@+id/btn_Linhvuc3"
        app:layout_constraintStart_toStartOf="@+id/btn_Linhvuc3"
        app:layout_constraintTop_toBottomOf="@+id/btn_Linhvuc3" />
</androidx.constraintlayout.widget.ConstraintLayout>